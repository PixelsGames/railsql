<!-- Modal Registration-->
<div class="modal fade" id="registrationModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content loginmodal-container">
      <!-- Modal content-->
      <button type="button" class="close modal-close-btn" data-dismiss="modal">&times;</button>
      <h1>Создайте аккаунт</h1><br>
      <%= simple_form_for(@user, url: registration_path(@user)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: 'Имя'
            %>

            <%= f.input :surname,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: 'Фамилия'
            %>

            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: 'Почта'

            %>

            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        label: false,
                        placeholder: 'Пароль'
            %>

            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        placeholder: 'Подтверждение пароля'
            %>

            <%= f.input :phone,
                        required: true,
                        label: false,
                        placeholder: 'Телефон'
            %>

            <%= f.association :city,
                              include_blank: false,
                              label: 'Город',
                              placeholder: 'Город'
            %>

            <%= f.association :school,
                              include_blank: false,
                              label: 'Школа',
                              placeholder: 'Школа'
            %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Sign up' %>
          </div>
      <% end %>
    </div>
  </div>
</div>