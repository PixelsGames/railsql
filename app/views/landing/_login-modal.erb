<!-- Modal Authentication -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content loginmodal-container">
      <button type="button" class="close modal-close-btn" data-dismiss="modal">&times;</button>
      <h1>Войдите в свой аккаунт</h1><br>
      <%= simple_form_for(:user, url: session_path(:user)) do |f| %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: 'Почта' %>

          <%= f.input :password,
                      required: false,
                      placeholder: 'Пароль',
                      label: false %>

          <div class="form-actions">
            <%= f.button :submit, 'Войти', class: 'login loginmodal-submit' %>
          </div>
      <% end %>
    </div>
  </div>
</div>